<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Shop Homepage - Start Bootstrap Template</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>
    @*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
    *@
    @model Cart;
    @if (Model != null)
    {
        <form class="orderForm" asp-action="DeleteCart" asp-controller="Cart" method="post">
            <style>
                .orderForm {
                    text-align: center;
                    margin: 50px auto;
                    margin-top: 50px;
                    width: 80%;
                    padding: 50px;
                    border: 1px solid #ccc;
                    border-radius: 8px;
                    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                }

                .product-container {
                    display: flex;
                    align-items: center;
                }

                .product-image {
                    max-width: 700px; /* Adjust the width as needed */
                    margin-right: 20px; /* Adjust the margin as needed */
                }

                .product-details {
                    flex: 1;
                }

                .quantity-container {
                    text-align: right;
                }
            </style>
            <div class="product-container" id="product-container">
                <div class="product-details">
                    <img class="product-image" src="@Model.PhotoPath" alt="Product Image">
                    <p id="product-description" asp-for="Description">@Model.Description</p>
                </div>
                <div class="product-details">
                    <h2 id="product-name" asp-for="ProductName">@Model.ProductName</h2>
                    <p>Stock: <span id="product-stock" asp-for="Stock">@Model.Stock</span></p>
                    <p>Price: <span id="product-price" asp-for="Price">@Model.Price</span></p>
                    <label class="quantity-label" for="quantity">Quantity:</label>
                    <input class="quantity-input" type="number" name="quantity" id="quantity" min="-1000" value="1" readonly>
                </div>
            </div>

            <br>
            <center><button type="submit" class="btn btn-outline-danger">Delete to Cart</button></center>
        </form>

    }
    else
    {
        <h2>Product not found</h2>
    }

    <a class="btn btn-dark" type="button" asp-controller="Cart" asp-action="Index">Go Back</a>

</body>
</html>